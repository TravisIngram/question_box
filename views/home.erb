
<div class="container">
  <div class="qb-form">
    <h2>Record Your Question</h2>
    <br />
    <form method="POST" action="/questions">
      <p><input type="text" name="question_box[question]" value="" placeholder="Take the attitude of a student..." /></p>
      </p>
      <p class="submit"><input type="submit" value="Submit"></p>
    </form>
  </div>
</div>

<br />

<div class="content">
  <h2>Recent Questions</h2>
  <br />
  <br />
  <ul>
    <% @question_boxes.each do |question_box| %>
      <% if question_box.question != "" && question_box.id >= 8 %>
      <h1> <a href="/questions/<%= question_box.id %>"><%= question_box.question %></h1> 
      <br />
      <% end %>
    <% end %>
  </ul>
</div>